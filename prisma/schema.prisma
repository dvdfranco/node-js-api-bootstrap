generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  name String
  email String
  password String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @default(now())
  updatedBy String

  @@map("users")
}